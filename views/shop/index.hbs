<div class="container">
	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="alert alert-success {{#if noMessages}}hidden{{/if}}">
				{{successMsg}}
			</div>
		</div>
	</div>

	{{# each products}}
	  <div class="row">
	  	{{# each this}}
			  <div class="col-sm-6 col-md-4">
			    <div class="thumbnail">
			      <img class="img-responsive"src={{this.imagePath}} alt="...">
			      <div class="caption">
			        <h3>{{this.title}}</h3>
			        <p class="description">{{this.description}}</p>
			        <div class="clearfix">
						<div class="price pull-left">Rs. {{this.price}}</div>
			        	<a href="/add-to-cart/{{this._id}}" class="pull-right" role="button"><i class="fa fa-cart-plus fa-2x add-cart" aria-hidden="true" title="Add to cart" data-id={{this._id}}></i></a>
			        </div>
			      </div>
			    </div>
			  </div>
	    {{/each}}
	</div>
	{{/each}}
</div>
<script type="text/javascript" src="javascripts/cart.js"></script>
