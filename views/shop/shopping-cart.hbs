<div class="container">
{{# if products}}

	<div class="row">
		<div class="col-sm-8 col-md-8 col-md-offset-2 col-sm-offset-2">
			<div class="panel cart-panel">
				<div class="panel-heading h3">Shopping Cart</div>
					<div class="panel-body">
						<table class="table cart-items">
							<tr>
								<th></th>
								<th>Item</th>
								<th>Price</th>
								<th>Quantity</th>
								<th></th>
							</tr>
							{{# each products}}
							<tr id={{this.item._id}}>
								<td>
									<img class="order_img" class="img-responsive"src={{this.item.imagePath}} alt="Product Image">
								</td>
								<td>
									{{this.item.title}}
								</td>
								<td>
									Rs. {{this.price}}
								</td>
								<td>
									<span class="item-qty">{{this.qty}}</span> 
								</td>
								<td>
									<a class="delete" href=""><i class="fa fa-trash"></i> Delete</a>
								</td>
							</tr>
							{{/each}}
						</table>		
					</div>
					<div class="panel-footer clearfix">
						<h4 class="pull-left"><strong id="total-price">Total: Rs. {{totalPrice}} </strong></h4>
						<a href="/checkout" class="btn btn-primary pull-right">Checkout</a>
					</div>		
				</div> 
			</div>
		</div>
	</div>		

	{{ else }}

	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<h2>Your Cart is Empty.</h2>
	</div> 

{{/if}}
</div>
<script type="text/javascript" src="javascripts/cart.js"></script>
